<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <PreferenceCategory 
        android:title="Urnik">
        
        <CheckBoxPreference 
            android:title="@string/preference_update_urnik_title"
            android:summary="@string/preference_update_urnik_summary"
            android:key="autoUpdate"
            android:defaultValue="true"/>
        
    </PreferenceCategory>
    
    <PreferenceCategory 
        android:title="Dijak">
        
        <ListPreference 
            android:title="@string/preference_odmor_title"
            android:summary="@string/preference_odmor_summary"
            android:key="oddelek"
            android:entries="@array/oddelki"
            android:entryValues="@array/oddelki"/>
        
    </PreferenceCategory>

</PreferenceScreen>
